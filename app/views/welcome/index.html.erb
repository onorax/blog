<html>
	<head>
		<title>Blog</title>

	</head>
	<body>
		<header id="top" name="top">
			<img src="<%= image_path('OnePieceManga-logo.gif')%>" width="350px">
		</header>
		<section id="conteudo" name="conteudo">
			<nav id="menu" name="menu">
				<ul>
					<li><%= link_to 'Blog', controller: 'articles' %></li>
				</ul>
			</nav>
			<article id="corpo" name="corpo">
				<table>
					<tr>
						<th>Title</th>
						<th>Text</th>
						<th colspan="2"></th>
					</tr>
					<% @articles.each do |article| %>
						<tr>
			
							<td><%= link_to article.title, article_path(article) %></td>
							<td><%= article.text %></td>
							 
						</tr>
					<% end %>
				</table>				
			</article>
		</section>
		<footer id="rodape" name="rodape">Desenvolvido por Ot√°vio de Souza Rocha<BR>Todos os direitos reservados</footer>
	</body>
</html>
